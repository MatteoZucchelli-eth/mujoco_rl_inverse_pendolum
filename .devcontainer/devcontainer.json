{
    "name": "Mujoco RL",
    "build": {
        "dockerfile": "../Dockerfile"
    },
    "runArgs": [
        "--privileged",
        "--net=host",
        "--env=DISPLAY=${localEnv:DISPLAY}",
        "--volume=/tmp/.X11-unix:/tmp/.X11-unix:rw"
    ],
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-vscode.vscode-json",
                "ms-python.python",
                "twxs.cmake",
                "ms-vscode.cpptools"
            ]
        }
    },
    "postCreateCommand": "mkdir -p build && cd build && cmake .. && make -j$(nproc)"
}