<mujoco model="inverse_pendulum">
  <compiler angle="radian" meshdir="assets" autolimits="true" inertiafromgeom="true"/>

  <default>
    <joint damping="1.0" armature="0.005"/>
    <geom type="mesh" friction="1 0.1 0.1"/> 
    <motor ctrlrange="-1 1" gear="10" ctrllimited="true"/>
  </default>
  
  <asset>
    <mesh file="guide.stl" scale="0.001 0.001 0.001"/>
    <mesh file="base.stl" scale="0.001 0.001 0.001"/>
    <mesh file="pendolum.stl" scale="0.001 0.001 0.001"/>
    <material name="guide_mat" rgba="0.62 0.81 0.93 1"/>
    <material name="base_mat" rgba="1 0.81 0.93 1"/>
    <material name="pend_mat" rgba="0.62 0.81 0.93 1"/>
  </asset>
  
  <worldbody>
     <geom name="guide" mesh="guide" material="guide_mat" pos="0 0 0.05" contype="0" conaffinity="0"/>

     <body name="base" pos="0 0 0.075">
        <joint name="base_x_joint" type="slide" axis="1 0 0" range="-2.5 2.5" frictionloss="0.01"/>
        
        <geom name="base" mesh="base" material="base_mat" mass="0.5"/>

        <body name="pendulum" pos="0 -0.1 0.125" euler="0 -1.5708 0">
             <joint name="pendulum_y_joint" type="hinge" axis="0 1 0" damping="0.01"/>
             <geom name="pendulum" mesh="pendolum" material="pend_mat" mass="0.5" euler="-3.14 1.57 -3.14" contype="0" conaffinity="0"/>
        </body>
     </body>
  </worldbody>

  <actuator>
     <motor name="base_actuator" joint="base_x_joint"/>
  </actuator>
</mujoco>